<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
  <!--Splash screen theme-->
  <style name="Theme.Splash" parent="Theme.SplashScreen">
    <!--Splash screen configuration. -->
    <item name="windowSplashScreenBackground">@color/primary</item>
    <item name="windowSplashScreenAnimatedIcon">@drawable/anim_launcher_splash</item>
    <item name="windowSplashScreenAnimationDuration">2000</item>
    <!--Set application theme. -->
    <item name="postSplashScreenTheme">@style/Theme.MultimoduleApp</item>
    <!--System bars during splash screen. -->
    <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    <item name="android:statusBarColor" tools:targetApi="m">?attr/colorPrimaryVariant</item>
    <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    <item name="android:navigationBarColor" tools:targetApi="o_mr1">?attr/colorPrimaryVariant</item>
  </style>

  <!-- Base application theme. -->
  <style name="Theme.MultimoduleApp" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryVariant">@color/primary_variant</item>
    <item name="colorMainPrimary">@color/main</item>

    <item name="android:statusBarColor" tools:targetApi="m">?attr/colorPrimaryVariant</item>
    <item name="android:navigationBarColor" tools:targetApi="o_mr1">?attr/colorPrimaryVariant</item>

    <item name="materialAlertDialogTheme">@style/Dialog.Alert</item>

  </style>
</resources>
