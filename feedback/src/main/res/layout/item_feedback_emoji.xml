<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/emoji_main_layout">

  <ImageView
      android:id="@+id/iv_emoji"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/bg_emoji_unselected"
      android:scaleType="centerInside"
      android:padding="@dimen/emoji"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:src="@drawable/emoji_very_bad" />

  <TextView
      android:id="@+id/tv_rate_status"
      style="@style/Text.Label2"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/half_margin"
      android:gravity="center"
      android:textColor="@color/rate_status"
      app:layout_constraintEnd_toEndOf="@id/iv_emoji"
      app:layout_constraintStart_toStartOf="@id/iv_emoji"
      app:layout_constraintTop_toBottomOf="@id/iv_emoji"
      tools:text="Շատ վատ" />

</androidx.constraintlayout.widget.ConstraintLayout>